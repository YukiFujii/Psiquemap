<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.psiquemap.psiquemap.tipos.de.perguntas.RespostaUnica"
    tools:showIn="@layout/activity_resposta_null"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:id="@+id/linearCabecalho">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Titulo"
            android:id="@+id/txtTituloRespNull"
            android:textAlignment="center"
            android:textSize="25dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Pergunta 0/0"
            android:id="@+id/txtMarcadorRespNull"
            android:textColor="#000000"
            android:layout_weight="1.5"
            android:textSize="20dp"
            android:textAlignment="textEnd"
            android:layout_gravity="end"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/linearCorpo"
        android:background="@color/material_grey_100">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearPergunta"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Pergunta"
                android:id="@+id/txtPerguntaRespNull"
                android:textColor="#000000"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:id="@+id/linearRodape">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proximo"
            android:id="@+id/btnProximoRespNull"
            android:layout_gravity="center_vertical"
            android:onClick="chamarTelaPerguntaRespNull"/>

    </LinearLayout>
</LinearLayout>
